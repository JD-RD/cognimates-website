# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf

[*.js]
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.scss]
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 2
